<h2>会員情報編集</h2>

<%# バリデーションエラーメッセージ%>
<% if @customer.errors.any? %>
 <%= @customer.errors.count %>件のエラーが発生しました
 <ul>
   <% @customer.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model:@customer do |f| %>
  <%# viewspublic/registrations/new.html.erb から貼り付け %>
  <div class = "field">
    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class = "field">
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kata %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kata %>
  </div>

  <div class = "field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :post_code %>
  </div>

  <div class = "field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class = "field">
    <%= f.label :"電話番号" %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class = "field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class = "action">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= link_to "退会する", out_path, method: :patch, "data-confirm" => "本当に退会しますか？" %>