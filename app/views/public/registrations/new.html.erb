<div class="container">

 <div class="row">
   <div class = "col-lg-4 offset-lg-1 mb-3">
    <h3>新規会員登録</h3>
  </div>
 </div>

<div class = "row">
 <div class = "col-lg-10 mb-4">
  <table class = "table table-borderless">
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>

   <tr>
    <td><%= f.label :"名前" %></td>
    <td>
     <%= f.label :"(姓)" %>
     <%= f.text_field :last_name, autofocus: true, placeholder: "山田", style: "width: 40%" %>
     <%= f.label :"(名)" %>
     <%= f.text_field :first_name, placeholder: "太朗", style: "width: 40%" %>
    </td>
   </tr>

   <tr>
    <td><%= f.label :"フリガナ" %></td>
    <td>
     <%= f.label :"(セイ)" %>
     <%= f.text_field :last_name_kata, placeholder: "ヤマダ", style: "width: 40%" %>
     <%= f.label :"(メイ)" %>
     <%= f.text_field :first_name_kata, placeholder: "タロウ", style: "width: 40%" %>
    </td>
   </tr>

   <tr>
    <td><%= f.label :"メールアドレス" %></td>
    <td>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@wxample.com", style: "width: 40%" %>
    </td>
   </tr>

   <tr>
    <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
    <td><%= f.text_field :post_code, placeholder: "1234567", style: "width: 40%" %></td>
   </tr>

   <tr>
    <td><%= f.label :"住所"%></td>
    <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 60%" %></td>
   </tr>

   <tr>
    <td><%= f.label :"電話番号(ハイフンなし)" %></td>
    <td><%= f.telephone_field :phone_number, placeholder: "123456789", style: "width: 40%" %></td>
   </tr>

   <tr>
    <td><%= f.label :"パスワード(6文字以上)" %></td>
    <td><%= f.password_field :password, autocomplete: "new-password", style: "width: 40%" %></td>
   </tr>

   <tr>
    <td><%= f.label :"パスワード(確認用)" %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 40%" %></td>
   </tr>

   <tr>
    <td></td>
    <td><%= f.submit "新規登録", class: "btn btn-success", style: "width: 30%" %></td>
   </tr>

   <% end %>
  </table>
 </div>
</div>

  <div class="row">
    <div class = "col-lg-4 offser-lg-1 mb-3">
      <h5>既に登録済の方</h5>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-12 mx-auto">
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>

</div>
