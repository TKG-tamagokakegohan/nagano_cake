<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1 mb-5 ">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <table class = "table table-bordered table-sm">
    <thred>
      <tr class = "table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thred>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td class = "align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td class = "align-middle">
          〒<%= order.post_code %><br>
            <%= order.address %><br>
            <%= order.address_name %>
        </td>
        <td class = "align-middle">
          <% order.order_details.each do |detail| %>
           <%= detail.item.name %><br>
          <% end %>
        </td>
        <td class = "align-middle">
          <% @total = 0 %>
          <% order.order_details.each do |detail| %>
            <% @total += detail.ordered_price*detail.item_count %>
          <% end %>
          <% @total.to_s(:delimited) %>
          <% order.postage %>
          <%= (@total + order.postage).to_s(:delimited) %>円
        </td>
        <td class = "align-middle"><%= order.order_status %></td>
        <td class = "align-middle text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>


<h1>注文履歴一覧</h1>
    <% @orders.each do |order| %>
        <p>注文日</p>
             <%= order.created_at %>
        <p>配送先</p>
             〒<%= order.post_code %><br>
             <%= order.address %><br>
             <%= order.address_name %>
        <p>注文商品</p>

        <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
        <%end%>

        <p>支払い金額</p>
         <% @total = 0 %>
        <% order.order_details.each do |detail| %>
            <% @total += detail.ordered_price*detail.item_count %>
        <% end %>
            <% @total.to_s(:delimited) %>
        <% order.postage %>
        <%= (@total + order.postage).to_s(:delimited) %>円

        <p>ステータス</p>
          <%=order.order_status %>
        <%= link_to "詳細画面へ", order_path(order) %>
    <% end %>


