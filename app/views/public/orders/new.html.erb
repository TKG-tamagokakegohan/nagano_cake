
<h1>8ページ</h1>
<h3>注文情報入力</h3>

<%= form_with model: @order, url:log_path ,method: :post, local: true do |f| %>
  <p>支払方法</p>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, "クレジットカード" %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, "銀行振り込み" %>
 <br>
<!-- customer テーブルに登録されている住所の場合です -->
  <%= f.radio_button :address_number, 1 %> <!-- address_number と定義して1～3の番号を check に送ります -->
  <%= f.label :address_number_1, "ご自身の住所" %><br>
  <%= current_customer.address %>
  <%= current_customer.post_code %>
  <%= current_customer.last_name+current_customer.first_name%>
<br>

<!-- 登録されたaddressから選んでもらう場合です -->
 <%= f.radio_button :address_number, 2 %>
 <%= f.label :address_number_2, "登録先の住所" %><br>
 <%= f.collection_select(:registered, current_customer.addresses.all, :id, :address) %>
  <br>
    <%= f.radio_button :address_number, 3 %>
    <%= f.label :address_number_3, "新しいお届け先" %><br>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
    <%= f.label :address_name, "宛名" %>
    <%= f.text_field :address_name %>

    <%= f.label :post_code, "郵便番号" %>
    <%= f.text_field :post_code %>
  <!-- 選んでもらったデータを送ります -->
  <br>
  <%= f.submit "確認画面へ進む" %>
<% end %>


<%=link_to "ホームページ", root_path %><br>

