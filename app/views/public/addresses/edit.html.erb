<h2>配送先編集</h2>

<%= form_with model:@address, method: :patch do |f| %>
  <div class = "field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code %>
  </div>

  <div class = "field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class = "field">
    <%= f.label :"宛名" %>
    <%= f.text_field :address_name %>
  </div>

  <div class = "action">
    <%= f.submit "変更内容を保存" %>
  </div>
<% end %>