<div class="container">

  <div class="row">
    <div class = "col-lg-4 offset-lg-1 mb-5">
      <h3>配送先編集</h3>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-7 mb-4">
      <%= form_with model:@address, method: :patch do |f| %>

        <div class = "form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4" %>
          <%= f.text_field :post_code, class: "form-control", style: "width: 30%" %>
        </div>

        <div class = "form-group row">
          <%= f.label :"住所", class: "col-sm-4" %>
          <%= f.text_field :address, class: "form-control", style: "width: 50%" %>
        </div>

        <div class = "form-group row">
          <%= f.label :"宛名", class: "col-sm-4" %>
          <%= f.text_field :address_name, class: "form-control mr-5", style: "width: 30%"  %>
          <%= f.submit "変更内容を保存", class: "btn btn-success ml-4" %>
        </div>

      <% end %>
    </div>
  </div>

</div>