<div class="container">

  <div class="row">
    <div class = "col-lg-4 offset-lg-1 mb-5">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-7 mb-4">
      <%= form_with model:@address do |f| %>

        <div class = "form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4" %>
          <%= f.text_field :post_code, placeholder: "1234567", class: "form-control", style: "width: 30%" %>
        </div>

        <div class = "form-group row">
          <%= f.label :"住所", class: "col-sm-4" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control", style: "width: 50%" %>
        </div>

        <div class = "form-group row">
          <%= f.label :"宛名", class: "col-sm-4" %>
          <%= f.text_field :address_name, placeholder: "山田太朗", class: "form-control mr-5", style: "width: 30%" %>
          <%= f.submit "新規登録", class: "btn btn-success ml-4" %>
        </div>

      <% end %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-8 mb-4">
      <table class = "table table-bordered">

        <thred class = "table-light">
          <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan = "2"></th>
          </tr>
        </thred>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td style = "width: 20%"><%= address.post_code %></td>
              <td style = "width: 30%" ><%= address.address %></td>
              <td style = "width: 20%"><%= address.address_name %></td>
              <td style = "width: 30%">
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success mr-1" %>
              <%= link_to "削除する", address_path(address), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger ml-1" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>