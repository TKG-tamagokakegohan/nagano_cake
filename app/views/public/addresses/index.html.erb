<h2>配送先登録/一覧</h2>

<%# 配送先登録フォーム %>

<%= form_with model:@address do |f| %>

  <div class = "field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code %>
  </div>

  <p>住所入れる</p>
  <%#= f.label :"住所" %>
  <%#= f.text_field :address %>

  <div class = "field">
    <%= f.label :"宛名" %>
    <%= f.text_field :address_name %>
  </div>

  <div class = "action">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%# 配送先一覧%>

<table>
  <thred>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan = "3"></th>
    </tr>
  </thred>
  <tbody>
    <%# addresses.each do |address| %>
    <tr>
      <td><%#= address.post_code %></td>
      <td><%#= address.address %></td>
      <td><%#= address.address_name %></td>
      <td>
        <%#= link_to "編集する", edit_address_path %>
        <%#= link_to "削除する", address_path, method: :delete, data: { confirm: "本当に削除しますか？"}%>
      </td>
    </tr>
    <%# end %>
  </tbody>
</table>