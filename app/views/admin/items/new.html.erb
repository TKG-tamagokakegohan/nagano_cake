<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-3 ">
      <h3>商品新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <%= form_with model: @item, url:admin_items_path do |f| %>
        <div class="form-group d-flex flex-row">
          <%= f.label :item_image, "商品画像" %>
          <%= f.file_field :item_image, class: "form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group d-flex flex-row">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, placeholder: "商品名", class: 'form-control', style: 'width: 60%' %>
        </div>
        <div class="form-group d-flex flex-row">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: 'form-control', style: 'width: 60%'%>
        </div>
        <div class="form-group d-flex flex-row">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"}, class: 'form-control' , style: 'width: 60%' %>
        </div>
        <div class="form-group d-flex flex-row">
          <%= f.label :price, "税抜価格" %>
          <%= f.text_field :price, placeholder: "1000", class: 'form-control', style: 'width: 60%' %>円
        </div>
        <div class="form-group d-flex flex-row">
          <%= f.label :is_active, "販売ステータス" %>
            <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売中", value: :true %>
            <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売停止中", value: :false %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
