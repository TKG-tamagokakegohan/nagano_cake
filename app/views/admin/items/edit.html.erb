<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-3 ">
      <h3>商品編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7 mx-auto">
      <%= form_with model: @item, url:admin_item_path(@item), method: :patch do |f| %>
        <div class="form-group row">
          <%= f.label :item_image, "商品画像", class: "col-sm-3" %>
          <%= f.file_field :item_image, class: "col-sm-7 form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group row">
          <%= f.label :name, "商品名", class: "col-sm-3" %>
          <%= f.text_field :name, placeholder: "商品名", class: 'form-control', style: 'width: 60%' %>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, "商品説明", class: "col-sm-3" %>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: 'col-sm-7 form-control', style: 'width: 60%'%>
        </div>
        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-3" %>
          <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"}, class: 'col-sm-7 form-control' , style: 'width: 60%' %>
        </div>
        <div class="form-group row">
          <%= f.label :price, "税抜価格", class: "col-sm-3" %>
          <%= f.text_field :price, placeholder: "1000", class: 'col-sm-7 form-control', style: 'width: 60%' %> 円
        </div>
        <div class="form-group row">
          <%= f.label :is_active, "販売ステータス", class: "col-sm-3" %>
            <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売中", value: :true, class: "col-sm-2"%>
            <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売停止中", value: :false, class: "col-sm-2" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
