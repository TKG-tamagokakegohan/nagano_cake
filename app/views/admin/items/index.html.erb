<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="mb-5">商品一覧</h3>
      <%= link_to " ＋ ", new_admin_item_path, class: "btn btn-info prounded-circle p-0" %>
      <table class='table'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
