<div class="container">
  <div class="row">
    <div class="col-lg-7">
      <h3 class="mb-5">ジャンル編集</h3>
        <%= form_with model: @genre, url:admin_genre_path do |f| %>
          <%= f.label :name, "ジャンル名", class: 'font-weight-bold' %>
            <%= f.text_field :name, class: "ml-5" %>
          <%= f.submit "変更を保存",class: "btn btn-success ml-5" %>
        <% end %>
    </div>
  </div>
</div>

