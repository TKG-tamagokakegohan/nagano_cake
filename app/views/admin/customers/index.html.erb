<div class = "container">
  <div class = "row">
    <div class = "col-lg-8 offset-lg-1 mb-5" >
      <h3>会員一覧</h3>
    </div>
  </div>

  <div class = "row">
    <div class = "col">

    </div>
  </div>
  <table class = "table">
    <thred class= "table-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thred>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
             <%= customer.last_name %>
             <%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td class="<%= customer.is_active_color %>"><%= customer.is_active ? "有効" : "退会" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>

</div>