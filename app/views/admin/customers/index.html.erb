<div class = "container">
  <div class = "row">
    <div class = "mx-auto" >

      <h2>会員一覧</h2>

      <table class = "table">
        <thred>
          <%# 背景色反映されない%>
          <tr class= "table-secondary">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thred>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                 <%= customer.last_name %>
                 <%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
               <% if customer.is_active == true%>
                有効
               <% else %>
                退会
               <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>

   </div>
  </div>
</div>