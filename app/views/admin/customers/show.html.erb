<div class = "container">

  <div clas = "row">
    <div class = "col-log-4 offset-lg-1 mb-3">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-7 mb-4">
      <table class = "table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= @customer.last_name %>
            <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= @customer.last_name_kata %>
            <%= @customer.first_name_kata %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td class="<%= @customer.is_active_color %>"><%= @customer.is_active ? "有効" : "退会" %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mr-5" %>
            <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary ml-5" %>
          </td>
        </tr>
      </table>
    </div>
  </div>

</div>