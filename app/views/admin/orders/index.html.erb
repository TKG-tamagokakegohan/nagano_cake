<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1 mb-5 ">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
    <table class='table'>
      <thead class="table-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |item| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.customer.name %></td>
            <td><%= order.order_details.amount %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @orders %>